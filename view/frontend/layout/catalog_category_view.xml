<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!--
        If you want to move the CDP widget around, change the referenceContainer name here,
        along with the "after" inside the block tags.
        The names are a little opaque, but if you're reading this you probably know what you're doing.
        -->
        <referenceContainer name="category.product.list.additional">
            <block class="Magento\Catalog\Block\Category\View" name="product.view.community_gallery"
                template="Pixlee_Pixlee::pixlee/category_gallery.phtml" after="-">
                <arguments>
                    <argument name="view_model" xsi:type="object">Pixlee\Pixlee\ViewModel\ProductWidget</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
